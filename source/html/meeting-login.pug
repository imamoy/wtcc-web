//- index.pug
extends ./include/layout.pug
block plugins-css
    link(rel='stylesheet' type='text/css' href='styles/plugins/slick.css')
    link(rel='stylesheet' type='text/css' href='styles/plugins/slick-theme.css')
block plugins-js
    script(src='scripts/plugins/slick.js')
    
block content
    main.wrapper.meeting-login
        .inner.text-center
            h4.main-subTitle.mb-1.mb-sm-3 世界台灣商會聯合總會 
            h2.main-Title.t-yellow.mb-3.mb-sm-5 第二十七屆第二次理監事聯席會議
        form.meeting-form(action='meeting-register.html')
            .meeting-form_box
                .meeting-form_title.text-center.p-3 報名作業
                .meeting-form_inner
                    .form-group.d-flex.py-2.mb-0
                        label.meeting-form_label.mr-3 會議編號
                        span.meeting-form_value 0272
                    .form-group.d-flex.py-2.mb-0
                        label.meeting-form_label.mr-3(for='member-name') 會員代碼
                        input.form-control#member-name.mr-2(type="text" style='max-width:97px;')
                        button.btn.btn-primary.mb-2(type='button') 發送OTP
                    .form-group.d-flex.py-2.mb-0
                        label.meeting-form_label.mr-3(for='otp') OTP驗證碼
                        input.form-control#otp(type="text")
            .form-group.mt-4
                .row
                    .col-6
                        button.btn.btn-secondary.w-100.mb-2.form-item.row-rounded.justify-content-center(type='button') 關閉
                    .col-6
                        button.btn.btn-danger.w-100.mb-2.form-item.row-rounded.justify-content-center(type='submit') 會員報名